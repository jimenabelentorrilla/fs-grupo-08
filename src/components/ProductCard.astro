---
const { name, price, image } = Astro.props;
---

<div class="product" data-category={Astro.props.category}>
    <div class="product-img">
        <img src={image} alt={name} />
    </div>
    
    <div class="product-details">
        <h3 class="product-title">{name}</h3>
        <p class="product-price">${price}</p>
    </div>
</div>

<style>
    /**Product Card**/
    .product {
        position: relative;
        overflow: hidden;
        border: 1px solid rgba(0, 0, 0, 0.1); /* fallback */
        border: 1px solid oklch(0 0 0 / 0.1);
        border-radius: 1rem;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05); /* fallback */
        box-shadow: 0 2px 6px oklch(0.3 0.02 250 / 0.08);
        transition: transform 0.3s ease;
        background-color: #fff; /* fallback */
        background-color: oklch(1 0 0); 
        cursor: pointer;
        width: 80%;
}
    .product-img{
        width: 100%;
        aspect-ratio: 4 / 2;
        overflow: hidden;
    }
    .product-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 1rem 1rem 0 0;
    }

    .product:hover {
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15); /* fallback */
        box-shadow: 0 8px 20px oklch(0.4 0.04 40 / 0.15);
        transform: translateY(-4px);
        transition: box-shadow 0.4s ease, transform 0.4s ease;
    }

    .product-details {
        padding: 2.2rem 1.2rem;
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
        font-family: "Libre Baskerville", serif;
        font-style: normal;
    }

    .product-title {
        font-size: 1.1rem;
        margin: 0;
    }

    .product-price {
        margin-bottom: 0;
        font-size: 1rem;
        margin: 0;
        color: #C19D60; /* fallback */
        color: oklch(0.755 0.163 79.88);
        font-weight: 900;
    } 
    /* Tablets (≥768px) */
    @media screen and (min-width: 768px) {
        .product{
            width: 100%;
        }
    }

    /* Desktops (≥992px) */
    @media screen and (min-width: 992px) {
        .product{
            width: 100%;
        }
    }

    /* Large desktops (≥1200px) */
    @media screen and (min-width: 1200px) {
        .product{
            width: 90%;
        }
    }
</style>